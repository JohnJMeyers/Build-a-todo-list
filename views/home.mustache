<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>index</title>
  </head>
  <body>
    <form class="" action="/" method="post">
      <div class="">
        <input type="text" name="text" value="" placeholder="Add a todo...">
        <input type="submit" name="submit" value="Add todo">
      </div>
    </form>
    <hr>

    {{#todoArray}}
    <form class="" action="/list" method="post">
      <div class="">
        <button type="submit" name="complete" value="{{.}}">Mark Complete</button><span>{{.}}</span>
        <!-- <submit type="submit" name="complete" value="Mark Complete"> -->
        <!-- <label for="complete">{{.}}</label> -->
      </div>
    </form>
    {{/todoArray}}

    <hr>
    <div class="">
      <h1>Completed:</h1>
      <ul>
        {{#completeArray}}
        <li>{{.}}</li>
        {{/completeArray}}
      </ul>
    </div>
  </body>
</html>
